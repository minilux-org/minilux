#!/usr/bin/env minilux
# FizzBuzz from 1 to 20

$i = 1
while ($i <= 20) {
    $mod3 = $i % 3
    $mod5 = $i % 5

    if ((($mod3 == 0) AND ($mod5 == 0))) {
        printf("FizzBuzz")
    } elseif ($mod3 == 0) {
        printf("Fizz")
    } elseif ($mod5 == 0) {
        printf("Buzz")
    } else {
        printf($i)
    }

    inc $i + 1
}
